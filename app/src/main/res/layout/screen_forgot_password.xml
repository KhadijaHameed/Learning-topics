<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_g"
    >



    <RelativeLayout
        android:id="@+id/outer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo" />


        <TextView
            android:id="@+id/broker"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:textColor="#59544b"
            android:text="Welcome to Broker Direct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="8dp"
        android:background="#80000000"
        android:layout_width="300dp"
        android:layout_height="380dp"
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/outer"
        android:layout_centerHorizontal="true">


        <TextView
            android:id="@+id/sign_In"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textColor="@color/textColor"
            android:text="Forgot Your Password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/email_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/sign_In"
            android:textSize="17sp"
            android:textColor="@color/textColor"
            android:text="Enter your email to reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/email_text_two"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/email_text"
            android:textSize="17sp"
            android:textColor="@color/textColor"
            android:text="your password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/email"
            android:textSize="17sp"
            android:hint="Email"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/email_text_two"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


<Button
    android:id="@+id/btn_one"
    android:text="Cancel"
    android:layout_height="40dp"
    android:layout_width="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
  android:layout_below="@+id/email"
   />


        <Button

            android:id="@+id/btn_two"
            android:text="Continue"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/btn_one"
            android:layout_alignRight="@+id/email"
            android:layout_alignEnd="@+id/email" />





    </RelativeLayout>


</RelativeLayout>