<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="5"
    android:id="@+id/ll_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#116EDE"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">
            <LinearLayout
                android:background="#ffffff"
                android:id="@+id/main"
                android:orientation="vertical"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:layout_width="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageView"
                        android:layout_width="90dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/markzuckerberg" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="15dp"
                        android:layout_toEndOf="@+id/circleImageView"
                        android:layout_toRightOf="@+id/circleImageView"
                        app:srcCompat="@drawable/pointer" />

                    <ImageView
                        android:id="@+id/iv_online"
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_alignLeft="@id/imageView"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@id/imageView"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/online" />

                    <TextView
                        android:id="@+id/tv_online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/imageView"
                        android:layout_alignParentBottom="true"
                        android:layout_alignRight="@+id/imageView"
                        android:layout_marginBottom="10dp"
                        android:text="online"
                        android:textColor="#000" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@id/tv_online"
                        android:src="@drawable/dropdown" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="Mark Zuckerberg"
                        android:textColor="#000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_below="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Sales @ Caterpiller"
                        android:textColor="#979494"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView2"
                        android:text="California in Silicon "
                        android:textColor="#484a59"
                        android:textSize="15sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <View
                        android:background="#979494"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:text="27"
                                android:textColor="#000000"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="5dp"
                                android:background="#979494"></View>

                        </RelativeLayout>

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:text="35"
                                android:textColor="#000000"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="5dp"
                                android:background="#979494"></View>
                        </RelativeLayout>

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:text="03"
                                android:textColor="#000000"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="Connections"
                                android:textColor="#484848" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="5dp"
                                android:background="#979494"></View>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="Networks"
                                android:textColor="#484848" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="5dp"
                                android:background="#979494"></View>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="Your Listings"
                                android:textColor="#484848" />
                        </RelativeLayout>

                    </LinearLayout>


                    <View
                        android:background="#979494"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        />


                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/main">
                <TextView
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="5/1000 Total Company Listings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <ScrollView
                android:background="#116EDE"
                android:layout_below="@id/total"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">




                    <RelativeLayout
                        android:onClick="QrScanner"
                        android:id="@+id/rl_scan"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <ImageView
                            android:src="@drawable/scan"
                            android:layout_width="100dp"
                            android:layout_margin="20dp"
                            android:layout_height="100dp"
                            android:id="@+id/imageView5" />

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/imageView5"
                            android:layout_toRightOf="@+id/imageView5"
                            android:text="Scan a Tag"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:weightSum="2.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:weightSum="3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <View
                            android:background="#b7b7b7"
                            android:layout_alignParentTop="true"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"></View>

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="News Feed"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <View
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:background="#116EDE"
                            android:layout_width="60dp"
                            android:layout_height="3dp"></View>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:background="#b7b7b7"
                            android:layout_alignParentTop="true"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"></View>
                        <TextView
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="My Networks" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:background="#b7b7b7"
                            android:layout_alignParentTop="true"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"></View>
                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="My Connect" />
                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:background="#b7b7b7"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"></View>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circal_image"
                        android:layout_width="40dp"
                        android:src="@drawable/markzuckerberg"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/circal_image"
                        android:fontFamily="@font/galada"
                        android:text="Share an update !"
                        android:id="@+id/textView17" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        app:srcCompat="@drawable/camera" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:background="#b7b7b7"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:id="@+id/view"></View>

                    <View
                        android:background="#116EDE"
                        android:layout_width="6dp"
                        android:layout_height="match_parent"
                        android:id="@+id/view2" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view"
                        android:layout_margin="8dp"
                        android:layout_toEndOf="@+id/view2"
                        android:layout_toRightOf="@+id/view2"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="Invites Company To Your Networks" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="Build your network, market your products,
 help your sales and share your company news"
                        android:textSize="12sp"
                        android:layout_margin="8dp"
                        android:layout_toEndOf="@+id/view2"
                        android:layout_toRightOf="@+id/view2"
                        android:layout_toLeftOf="@id/imageView3"
                        android:layout_toStartOf="@id/imageView3"

                        />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="25dp"
                        android:layout_marginRight="25dp"
                        app:srcCompat="@drawable/add_blue" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:background="#b7b7b7"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:id="@+id/view3"></View>

                    <View
                        android:background="#8f8e8e"
                        android:layout_width="6dp"
                        android:layout_height="match_parent"
                        android:id="@+id/view4" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view3"
                        android:layout_margin="8dp"
                        android:layout_toEndOf="@+id/view4"
                        android:layout_toRightOf="@+id/view4"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="Add your co-workers to Krank" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="Build your workplace, share content and
discuss projects within your own company"
                        android:textSize="12sp"
                        android:layout_margin="8dp"
                        android:layout_toEndOf="@+id/view4"
                        android:layout_toRightOf="@+id/view4"
                        android:layout_toLeftOf="@id/imageView4"
                        android:layout_toStartOf="@id/imageView4"

                        />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="25dp"
                        android:layout_marginRight="25dp"
                        app:srcCompat="@drawable/add_black" />


                </RelativeLayout>
                <View
                    android:background="#b7b7b7"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"></View>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:weightSum="5"
            android:layout_weight="2.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="50dp"
                    android:src="@drawable/markzuckerberg"
                    android:layout_centerVertical="true"
                    android:id="@+id/circleImageView2" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/circleImageView2"
                    android:layout_toRightOf="@+id/circleImageView2"
                    android:text="Krank"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#514f4f"/>

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/textView22"
                    android:layout_toRightOf="@+id/textView22"
                    android:text="Share this post"
                    android:textSize="11dp"/>

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/circleImageView2"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:text="8 min ago"
                    android:textSize="10sp"/>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:background="@drawable/conection"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></RelativeLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:text="Your company has a new private network" />

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textView25"
                            android:layout_alignStart="@+id/textView25"
                            android:layout_below="@+id/textView25"
                            android:textSize="10sp"
                            android:text="“If you want to go fast, go alone, if you want to go far, go with others.” " />
                    </RelativeLayout>

                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_weight=".7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <Button
                                    android:id="@+id/button"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:background="#116EDE"
                                    android:textColor="#fff"
                                    android:text="View profile" />



                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:background="#116EDE"
                                    android:textColor="#fff"
                                    android:text="Add Connections" />

                            </RelativeLayout>


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_weight="1.3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/iv_like"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/like"
                                android:layout_width="25dp"
                                android:layout_height="20dp" />

                            <TextView
                                android:id="@+id/tv_like"
                                android:textColor="#0d51a3"
                                android:layout_toRightOf="@id/iv_like"
                                android:text="Like 12"
                                android:textSize="12sp"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="20dp"
                                android:id="@+id/iv_comment"
                                android:src="@drawable/comment"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/tv_like"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:layout_toRightOf="@id/iv_comment"
                                android:text="Comment"
                                android:textSize="12sp"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
