<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
   >

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:id="@+id/setting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <ImageView
            android:id="@+id/iv_setting_back"
            android:src="@drawable/back_icon"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="19dp"
            android:layout_toEndOf="@+id/iv_setting_back"
            android:layout_toRightOf="@+id/iv_setting_back"
            android:fontFamily="@font/roboto_italic"
            android:text="Settings" />


    </RelativeLayout>
    <ScrollView

        android:layout_below="@id/setting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/layout"
            android:background="@color/colorPrimaryDark"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_user_interface"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/roboto_italic"
                    android:text="User Interface"
                    android:textColor="#b5b5b5"
                    android:textSize="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_theme"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/rl_user_interface">


                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/roboto_italic"
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Theme"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:textSize="16sp"
                    android:textColor="#b5b5b5"
                    android:fontFamily="@font/roboto_italic"
                    android:id="@+id/tv_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView6"
                    android:layout_alignStart="@+id/textView6"
                    android:layout_below="@+id/textView6"
                    android:text="Glossy" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#b5b5b5"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/rl_theme"
                android:id="@+id/rl_primary_colour">

                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/roboto_italic"
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Primary Color"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:textSize="16sp"
                    android:textColor="#b5b5b5"
                    android:fontFamily="@font/roboto_italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView7"
                    android:layout_alignStart="@+id/textView7"
                    android:layout_below="@+id/textView7"
                    android:text="Choose primary color for theme" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#b5b5b5"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/rl_manage_tabs"
                android:layout_below="@id/rl_primary_colour">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_italic"
                    android:text="Manage Tabs"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#b5b5b5"
                    android:layout_alignParentBottom="true"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/rl_change_font"
                android:layout_below="@id/rl_manage_tabs">

                <TextView
                    android:text="Change Font"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#b5b5b5"
                    android:layout_alignParentBottom="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/rl_change_font"
                android:id="@+id/rl_lock_screen">

               <TextView
                    android:text="Lock Screen Album Art"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <CheckBox
                    android:layout_margin="10dp"
                    android:id="@+id/cb_lock_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                     />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/rl_lock_screen"
                android:id="@+id/rl_shake_heading">

                <TextView
                    android:text="Shake"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="#b5b5b5"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/rl_shake_heading"
                android:id="@+id/rl_shake_control">

                <TextView
                    android:text="Shake Control"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <CheckBox
                    android:layout_margin="10dp"
                    android:id="@+id/cb_shake_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#b5b5b5"
                    android:layout_alignParentBottom="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/rl_shake_control"
                android:id="@+id/rl_shake_action">

                <TextView
                    android:textSize="16sp"
                    android:textColor="#b5b5b5"
                    android:fontFamily="@font/roboto_italic"
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Shake Action"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:textSize="16sp"
                    android:textColor="#b5b5b5"
                    android:fontFamily="@font/roboto_italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView8"
                    android:layout_alignStart="@+id/textView8"
                    android:layout_below="@+id/textView8"
                    android:text="Play/Pause Current Track" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#b5b5b5"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/rl_shake_action"
            android:id="@+id/rl_library_heading">

            <TextView
                android:text="Library"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/roboto_italic"
                android:textColor="#b5b5b5"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/rl_library_heading"
                android:id="@+id/rl_hide_audio">

                <TextView
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/roboto_italic"
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Hide Audio Clips Less Then"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:textSize="16sp"
                    android:textColor="#b5b5b5"
                    android:id="@+id/tv_second"
                    android:fontFamily="@font/roboto_italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView9"
                    android:layout_alignStart="@+id/textView9"
                    android:layout_below="@+id/textView9"
                    android:text="0 Second" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/rl_hide_audio"
                android:id="@+id/rl_about_heading">

                <TextView
                    android:text="About"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/roboto_italic"
                    android:textColor="#b5b5b5"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/rl_about"
                android:layout_below="@+id/rl_about_heading">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/roboto_italic"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:text="About"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>