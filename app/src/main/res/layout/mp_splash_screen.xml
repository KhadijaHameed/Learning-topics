<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/splashplay" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_play"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/iv_play"
            android:layout_toRightOf="@+id/iv_play"
            android:fontFamily="@font/roboto_italic"
            android:text="Play the moments ."
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="17sp" />

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/iv_pause"
            android:layout_below="@+id/iv_play"
            android:src="@drawable/splashpause"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:fontFamily="@font/roboto_italic"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_pause"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:text="Pause the memories ."
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="17sp"/>


        <ImageView
            android:layout_margin="9dp"
            android:id="@+id/iv_stop"
            android:layout_below="@+id/iv_pause"
            android:src="@drawable/splasstop"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_stop"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:text="Stop the pain ."
            android:fontFamily="@font/roboto_italic"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="17sp"/>

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/iv_rewind"
            android:layout_below="@+id/iv_stop"
            android:src="@drawable/plashrewind"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_rewind"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:text="Rewind the happines ."
            android:fontFamily="@font/roboto_italic"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="17sp"/>

    </RelativeLayout>



</RelativeLayout>