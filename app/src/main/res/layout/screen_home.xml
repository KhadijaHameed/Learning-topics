<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/b_g"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/outer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo" />


        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/imageView"
            android:id="@+id/broker"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#59544b"
            android:text="Welcome to Broker Direct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <RelativeLayout
        android:background="#80000000"
        android:layout_width="300dp"
        android:layout_height="380dp"
        android:layout_below="@+id/outer"
        android:layout_centerHorizontal="true">


        <TextView
            android:id="@+id/sign_In"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="17sp"
            android:textColor="@color/textColor"
            android:text="Sign in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/email"
            android:textSize="15sp"

            android:hint="ahmed.baker@hamptons.com"
            android:layout_below="@+id/sign_In"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <EditText
            android:id="@+id/password"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:hint="**********"
            android:layout_below="@+id/email"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




        <LinearLayout
            android:id="@+id/linear_two"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/checkBOx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_toRightOf="@+id/checkBOx"
                android:layout_below="@+id/password"
                android:textColor="@color/textColor"
                android:text="Remember Me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <Button
            android:id="@+id/connect"
            android:text="Connect"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:layout_below="@+id/linear_two" />

        <TextView
            android:id="@+id/forgot"
            android:layout_marginLeft="12dp"
            android:layout_below="@+id/connect"
            android:textColor="@color/textColor"
            android:text="Forgot Password?"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/arbi"
            android:textColor="@color/textColor"
            android:text="عربی"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/forgot"
            android:layout_alignBottom="@+id/forgot"
            android:layout_toRightOf="@+id/sign_In" />

        <ImageView
            android:src="@drawable/finger_print"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/forgot"
            />






    </RelativeLayout>



</RelativeLayout>
