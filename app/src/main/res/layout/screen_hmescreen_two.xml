<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_g">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

        <RelativeLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:src="@drawable/search__"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/logo"
            android:src="@drawable/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="95dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView7"
        android:textSize="22sp"
        android:textColor="#59544b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginStart="125dp"
        android:text="BROKER DIRECT"
        android:textStyle="bold"
        android:layout_above="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:textStyle="bold"
        android:textColor="#59544b"
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Digital Sales Platform"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2">

        <TextView
            android:id="@+id/under_line"
            android:textColor="#ffffff"
            android:layout_marginLeft="30dp"
            android:text="________________________________"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/under_line"
            android:id="@+id/explore"
            android:textColor="#ffffff"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="30dp"
            android:text="EXPLORE"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/explore"
            android:id="@+id/property"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginLeft="70dp"
            android:text="All Properties"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/property"
            android:id="@+id/inventory"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginLeft="70dp"
            android:text="View All Inventory"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/inventory"
            android:id="@+id/customer"
            android:textColor="#ffffff"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="30dp"
            android:text="MY CUSTOMERS"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_below="@+id/customer"
            android:id="@+id/account"
            android:textColor="#ffffff"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="30dp"
            android:text="MY ACCOUNT"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</RelativeLayout>