<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/b_g"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <Button
        android:id="@+id/home_btn"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="132dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="62dp"
        android:text="HOME"
        />

    <Button
        android:id="@+id/screen_one"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCREEN"
        android:layout_below="@+id/home_btn"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/home_btn"
        android:layout_alignStart="@+id/home_btn" />

    <Button
        android:id="@+id/screen_two"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/screen_one"
        android:layout_alignRight="@+id/screen_one"
        android:layout_below="@+id/screen_one"
        android:layout_marginTop="14dp"
        android:text="SCREEN 2" />

    <Button
        android:id="@+id/forgot_pass"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/screen_two"
        android:layout_alignStart="@+id/screen_two"
        android:layout_below="@+id/screen_two"
        android:layout_marginTop="18dp"
        android:text="FORGOT PASSWORD" />

    <Button
        android:id="@+id/nav"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/forgot_pass"
        android:layout_alignStart="@+id/forgot_pass"
        android:layout_below="@+id/forgot_pass"
        android:layout_marginTop="15dp"
        android:text="NAVIGATION" />

    <Button
        android:id="@+id/splash"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="SPLASH"
        android:layout_below="@+id/nav"
        android:layout_alignLeft="@+id/nav"
        android:layout_alignStart="@+id/nav" />

    <Button
        android:id="@+id/setting_btn"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/splash"
        android:layout_alignStart="@+id/splash"
        android:layout_below="@+id/splash"
        android:layout_marginTop="20dp"
        android:text="SETTING" />
</RelativeLayout>
